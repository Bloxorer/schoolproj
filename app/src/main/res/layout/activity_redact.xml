<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.Redact">

    <ImageButton
        android:id="@+id/deletallquest"
        android:layout_width="175dp"
        android:layout_height="89dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="263dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deletallword" />

    <TextView
        android:id="@+id/deletallquesttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="35dp"
        android:text="Удалить все вопросы"
        android:textColor="#5C00FF"
        app:layout_constraintBottom_toBottomOf="@+id/deletallquest"
        app:layout_constraintEnd_toEndOf="@+id/deletallquest"
        app:layout_constraintStart_toStartOf="@+id/deletallquest"
        app:layout_constraintTop_toTopOf="@+id/deletallquest" />

    <ImageButton
        android:id="@+id/deletallword"
        android:layout_width="175dp"
        android:layout_height="89dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/background_button"
        app:layout_constraintBottom_toTopOf="@+id/deletallquest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listofquest" />

    <TextView
        android:id="@+id/deletallwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="35dp"
        android:text="Удалить все слова"
        android:textColor="#5C00FF"
        app:layout_constraintBottom_toBottomOf="@+id/deletallword"
        app:layout_constraintEnd_toEndOf="@+id/deletallword"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/deletallword"
        app:layout_constraintTop_toTopOf="@+id/deletallword"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/listofquest"
        android:layout_width="175dp"
        android:layout_height="89dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/background_button"
        app:layout_constraintBottom_toTopOf="@+id/deletallword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listofquesttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="35dp"
        android:text="Список вопросов"
        android:textColor="#5C00FF"
        app:layout_constraintBottom_toBottomOf="@+id/listofquest"
        app:layout_constraintEnd_toEndOf="@+id/listofquest"
        app:layout_constraintStart_toStartOf="@+id/listofquest"
        app:layout_constraintTop_toTopOf="@+id/listofquest" />
</androidx.constraintlayout.widget.ConstraintLayout>