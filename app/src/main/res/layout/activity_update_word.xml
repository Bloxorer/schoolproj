<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.Word.UpdateWordActivity">

    <EditText
        android:id="@+id/editWord"
        android:layout_width="292dp"
        android:layout_height="129dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Слово"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/definitionedit"
        android:layout_width="346dp"
        android:layout_height="453dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Перевод или объяснение"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/updWord"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/definitionedit"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="262dp" />

    <ImageButton
        android:id="@+id/delWord"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/definitionedit"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/updtext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Удалить"
        android:textAlignment="center"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/delWord"
        app:layout_constraintEnd_toEndOf="@+id/delWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/delWord"
        app:layout_constraintTop_toTopOf="@+id/delWord"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/deltext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Обновить"
        android:textAlignment="center"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/updWord"
        app:layout_constraintEnd_toEndOf="@+id/updWord"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/updWord"
        app:layout_constraintTop_toTopOf="@+id/updWord"
        app:layout_constraintVertical_bias="0.487" />

    <Button
        android:id="@+id/BackUPDWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="21dp"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/updWord"
        app:layout_constraintStart_toEndOf="@+id/delWord"
        app:layout_constraintTop_toBottomOf="@+id/definitionedit" />
</androidx.constraintlayout.widget.ConstraintLayout>