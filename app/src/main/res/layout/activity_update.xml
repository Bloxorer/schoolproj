<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.UpdateActivity">

    <EditText
        android:id="@+id/editWord"
        android:layout_width="292dp"
        android:layout_height="129dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Слово"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/definitionedit"
        android:layout_width="346dp"
        android:layout_height="453dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Перевод или объяснение"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/upd"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/back_recycle" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back_recycle" />

    <TextView
        android:id="@+id/updtext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Удалить"
        android:textAlignment="center"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/del"
        app:layout_constraintEnd_toEndOf="@+id/del"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/del"
        app:layout_constraintTop_toTopOf="@+id/del"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/deltext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Обновить"
        android:textAlignment="center"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/upd"
        app:layout_constraintEnd_toEndOf="@+id/upd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/upd"
        app:layout_constraintTop_toTopOf="@+id/upd"
        app:layout_constraintVertical_bias="0.487" />
</androidx.constraintlayout.widget.ConstraintLayout>