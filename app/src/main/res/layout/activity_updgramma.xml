<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/back_recycle2"
    android:layout_height="match_parent"
    tools:context=".view.Gramma.UPDGramma">

    <EditText
        android:id="@+id/editGramma"
        android:layout_width="292dp"
        android:layout_height="129dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Заголовок"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/desbribeEditGramma"
        android:layout_width="346dp"
        android:layout_height="453dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/background_button"
        android:ems="10"
        android:inputType="text"
        android:text="Текст"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/updGramma"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backUPDGR"
        app:layout_constraintTop_toBottomOf="@+id/desbribeEditGramma"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/delGramma"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desbribeEditGramma"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/updtext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Удалить"
        android:textAlignment="center"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/delGramma"
        app:layout_constraintEnd_toEndOf="@+id/delGramma"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/delGramma"
        app:layout_constraintTop_toTopOf="@+id/delGramma"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/deltext"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Обновить"
        android:textAlignment="center"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/updGramma"
        app:layout_constraintEnd_toEndOf="@+id/updGramma"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/updGramma"
        app:layout_constraintTop_toTopOf="@+id/updGramma"
        app:layout_constraintVertical_bias="0.487" />

    <Button
        android:id="@+id/backUPDGR"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deltext"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/delGramma"
        app:layout_constraintTop_toBottomOf="@+id/updGramma"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>